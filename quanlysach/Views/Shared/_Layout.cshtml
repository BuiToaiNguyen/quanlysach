<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="icon" type="image/x-icon" href="https://amadegraphic.com/wp-content/uploads/2022/03/imager_23_5334_700.jpg">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.css"
          rel="stylesheet" />
    <link href="~/Content/styleAll.css" rel="stylesheet" />
    @RenderSection("Header",false)
</head>
<body>
    

<nav class="navbar navbar-expand-sm navbar-dark bg-primary">
    <div class="container-fluid">
        <a class=" text_logo" href="/">SáchMới.Net</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="mynavbar">
            <ul class="navbar-nav me-auto">
                @*<li class="nav-item">
                <a class="nav-link" href="javascript:void(0)">Link</a>
            </li>*@

            </ul>
            <form class="d-flex mr-2">
                <input class="form-control me-2" type="text" placeholder="Search" name="searchString">
                <button class="btn btn-success" type="submit">Search</button>
            </form>
            @if (Session["user"] != null)
            {
                <p class="text-center" style="margin-left:10px" id="nameUser">xin chào: @Session["user"].ToString() </p>

                <div class="me-4 box_logOut">
                    @Html.ActionLink("Đăng xuất", "LogOut", "AdminHome", new { area = "admin" }, new { @class = "navbar-brand" })

                </div>
                if (@Session["permission"] != null)
                {
                    <a href="/admin/adminHome/index"style="color:antiquewhite ">đến trang Admin </a>
                }

            }
            else
            {
                <div class="">
                    <a href="/Login" class="link_login"> Đăng nhập</a>

                </div>
            }
            
            


        </div>
    </div>
</nav>



<div class="container body-content">
    @RenderBody()
    <hr />
       
</div>
<footer class=" bg-primary footer ">
    <p>©2017 - 2022 Sách Mới.Net - Thư viện Ebook miễn phí
    </p>
    <p>Điều khoản sử dụng - Chính sách bảo mật</p>
</footer>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.js"></script>
</body>
</html>
